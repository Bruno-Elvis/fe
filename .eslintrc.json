{
  "env": {
     "browser": true,
     "es2021": true
  },

  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],

  "parserOptions": {
     "ecmaVersion": 12,
     "sourceType": "module",
     "ecmaFeatures": {
      "jsx": true
    }

  },

  "plugins": [
    "react",
    "@stylistic/js"
  ],

  "rules": {
    "react/react-in-jsx-scope": "off",

    "react/jsx-filename-extension": [
      1,
      {
         "extensions": [".js", ".jsx"]
      }

    ],

    "react/jsx-indent": "off",

    "no-extra-semi": "off",

    "react/no-deprecated": "off"

  }

}
